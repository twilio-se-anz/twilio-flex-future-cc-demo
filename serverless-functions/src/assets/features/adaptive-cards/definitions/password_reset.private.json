{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Password Reset",
      "horizontalAlignment": "Center",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "Input.Text",
      "id": "UserVal",
      "label": "Email Address",
      "isRequired": true,
      "errorMessage": "Username is required"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Reset",
      "data": {
        "id": "LoginVal",
        "text": "User is attempting to login"
      },
      "style": "positive"
    }
  ]
}
