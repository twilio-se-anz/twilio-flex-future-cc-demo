      "facts": [
        {
          "title": "Name",
          "value": "Christopher Connolly"
        },
        {
          "title": "Phone number",
          "value": "+61467601932"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "1x",
              "value": "Awesome Sauce"
            },
            {
              "title": "2x",
              "value": "Oh yeahs"
            },
            {
              "title": "1x",
              "value": "Daft Punks"
            }
          ],
          "spacing": "Small"
        }
      ],
      "spacing": "Small"
    }
